<h1>Listing fun_facts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>


    <% @fun_facts.each do |fun_fact| %>
      <ul>

      <li><%= fun_fact.content %>  <%= link_to 'Show', fun_fact %>
      <%= link_to 'Edit', edit_fun_fact_path(fun_fact) %>
      <%= link_to 'Destroy', fun_fact, method: :delete, data: { confirm: 'Are you sure?' } %>  </li>
    </ul>
      
    <% end %>



